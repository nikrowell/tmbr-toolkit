{
  "name": "tmbr-toolkit",
  "type": "module",
  "private": true,
  "workspaces": [
    "carousel",
    "emitter",
    "shader",
    "store",
    "utils"
  ],
  "scripts": {
    "test": "npm-run-all --silent test:*",
    "test:emitter": "node emitter/test.js",
    "test:store": "node store/test.js",
    "test:utils": "node utils/test.js",
    "start:carousel": "npm --prefix carousel run start",
    "start:shader": "npm --prefix shader run start"
  },
  "devDependencies": {
    "jsdom": "^27.0.0",
    "npm-run-all": "^4.1.5",
    "snoop": "^1.0.2",
    "uvu": "^0.5.6"
  }
}
